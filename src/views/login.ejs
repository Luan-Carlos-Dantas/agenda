<%-include('includes/head')%>
    <%-include('includes/nav')%>
        <div class="container">
            <div class="row">
                <div class="col-lg-2">

                </div>
                <div class="col-lg-8 mt-4">
                    <h1 class="text-center">
                        Login
                    </h1>
                    <p class="text-center lead">
                        Faça login ou cire sua conta abaixo
                    </p>
                    <%-include('includes/messages')%>
                    <div class="row">
                        <div class="col-lg">
                            <h4 class="text-center">Faça seu cadastro</h4>
                            <p>Caso não possua conta preencha o furmulário abaixo</p>
                            <form action="/login/register" class="form-cadastro" method="post">
                                <div class="form-floating mb-3">
                                    <input type="hidden" name="_csrf" value="<%=csrfToken%>">
                                    <input type="email" name="email" class="form-control" id="floatingInputSignUp"
                                        placeholder="name@example.com">
                                    <label for="floatingInputSignUp">E-mail</label>
                                </div>
                                <div class="form-floating mb-3">
                                    <input type="password" name="password" class="form-control" id="floatingPasswordSignUp"
                                        placeholder="Password">
                                    <label for="floatingPasswordSignUp">Senha</label>
                                </div>
                                <button type="submit" class="btn btn-primary">Criar conta</button>
                            </form>
                        </div>
                        <div class="col-lg">
                            <h4 class="text-center">Faça seu login</h4>
                            <p>Caso já possua uma conta só entrar com seu login e senha</p>
                            <form action="/login/login" method="post" class="form-login">
                                <input type="hidden" name="_csrf" value="<%=csrfToken%>">
                                <div class="form-floating mb-3">
                                    <input type="email" name="email" class="form-control" id="floatingInput"
                                        placeholder="name@example.com">
                                    <label for="floatingInput">E-mail</label>
                                </div>
                                <div class="form-floating mb-3">
                                    <input type="password" name="password" class="form-control" id="floatingPassword"
                                        placeholder="Password">
                                    <label for="floatingPassword">Senha</label>
                                </div>
                                <button type="submit" class="btn btn-primary">Entrar</button>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="col-lg-2">

                </div>
            </div>
        </div>
<%-include('includes/footer')%>